doi = {10.1093/cercor/1.1.1},
file = {:home/mer0/Documents/Mendeley Desktop/Felleman, Van Essen{\_}1991{\_}Distributed hierarchical processing in the primate cerebral cortex.pdf:pdf},
isbn = {1047-3211 (Print)$\backslash$n1047-3211 (Linking)},
