title = {{Dynamics of networks of excitatory and inhibitory neurons in response to time-dependent inputs}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3103906{\&}tool=pmcentrez{\&}rendertype=abstract},
volume = {5},
