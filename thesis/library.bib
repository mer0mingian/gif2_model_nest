language = {English},
mendeley-tags = {Learning Rules,Plasticity},
month = {jan},
pages = {85},
pmid = {26834568},
publisher = {Frontiers},
title = {{Neuromodulated Spike-Timing-Dependent Plasticity, and Theory of Three-Factor Learning Rules.}},
url = {http://journal.frontiersin.org/article/10.3389/fncir.2015.00085/abstract},
